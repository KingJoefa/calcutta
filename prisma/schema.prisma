generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String        @id @default(cuid())
  name        String
  rngSeed     String
  status      EventStatus   @default(draft)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  auditLogs   AuditLog[]
  bids        Bid[]
  ledger      LedgerEntry[]
  lots        Lot[]
  players     Player[]
  ruleSet     RuleSet?
  sales       Sale[]
  snapshots   Snapshot[]
  teams       Team[]
  teamResults TeamResult[]
}

model Player {
  id        String        @id @default(cuid())
  eventId   String
  name      String
  handle    String?
  createdAt DateTime      @default(now())
  bids      Bid[]
  ledger    LedgerEntry[]
  event     Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  sales     Sale[]

  @@index([eventId])
}

model Team {
  id        String      @id @default(cuid())
  eventId   String
  name      String
  seed      Int?
  region    String?
  bracket   String?
  odds      Json?
  createdAt DateTime    @default(now())
  lot       Lot?
  event     Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  result    TeamResult?

  @@index([eventId])
}

model RuleSet {
  id                        String      @id @default(cuid())
  eventId                   String      @unique
  anteCents                 Int
  minIncrementCents         Int
  auctionTimerSeconds       Int
  antiSnipeExtensionSeconds Int
  roundAllocations          Json
  additiveCombos            Boolean     @default(true)
  createdAt                 DateTime    @default(now())
  updatedAt                 DateTime    @updatedAt
  includeAnteInPot          Boolean     @default(true)
  payoutBasis               PayoutBasis @default(team_price)
  intermissionSeconds       Int         @default(30)
  event                     Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Lot {
  id                   String    @id @default(cuid())
  eventId              String
  teamId               String    @unique
  orderIndex           Int
  status               LotStatus @default(pending)
  openedAt             DateTime?
  closesAt             DateTime?
  currentBidCents      Int       @default(0)
  highBidderId         String?
  acceptedBidderId     String?
  pauseDurationSeconds Int       @default(0)
  pausedAt             DateTime?
  bids                 Bid[]
  event                Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  team                 Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  sale                 Sale?

  @@unique([eventId, orderIndex])
  @@index([eventId])
}

model Bid {
  id          String   @id @default(cuid())
  eventId     String
  lotId       String
  playerId    String
  amountCents Int
  createdAt   DateTime @default(now())
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  lot         Lot      @relation(fields: [lotId], references: [id], onDelete: Cascade)
  player      Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([lotId])
  @@index([playerId])
}

model Sale {
  id          String   @id @default(cuid())
  eventId     String
  lotId       String   @unique
  playerId    String
  amountCents Int
  finalizedAt DateTime @default(now())
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  lot         Lot      @relation(fields: [lotId], references: [id], onDelete: Cascade)
  player      Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
}

model TeamResult {
  id           String   @id @default(cuid())
  eventId      String
  teamId       String   @unique
  roundResults Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  team         Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

model LedgerEntry {
  id          String     @id @default(cuid())
  eventId     String
  playerId    String?
  type        LedgerType
  amountCents Int
  note        String?
  refId       String?
  createdAt   DateTime   @default(now())
  event       Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  player      Player?    @relation(fields: [playerId], references: [id])

  @@index([eventId])
  @@index([playerId])
  @@index([type])
}

model Snapshot {
  id        String   @id @default(cuid())
  eventId   String
  createdAt DateTime @default(now())
  data      Json
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id        String   @id @default(cuid())
  eventId   String?
  actor     String?
  type      String
  details   Json?
  createdAt DateTime @default(now())
  event     Event?   @relation(fields: [eventId], references: [id])
}

enum EventStatus {
  draft
  live
  closed
}

enum LotStatus {
  pending
  open
  sold
}

enum LedgerType {
  ante
  sale
  refund
  adjustment
  reversal
}

enum PayoutBasis {
  team_price
  total_pot
}
