generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventStatus {
  draft
  live
  closed
}

enum LotStatus {
  pending
  open
  sold
}

enum LedgerType {
  ante
  sale
  refund
  adjustment
  reversal
}

enum PayoutBasis {
  team_price   // payouts are pct of each team's winning bid
  total_pot    // payouts are pct of total pot (bids + ante)
}

model Event {
  id          String     @id @default(cuid())
  name        String
  rngSeed     String
  status      EventStatus @default(draft)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  ruleSet     RuleSet?
  players     Player[]
  teams       Team[]
  lots        Lot[]
  bids        Bid[]
  sales       Sale[]
  teamResults TeamResult[]
  ledger      LedgerEntry[]
  snapshots   Snapshot[]
  auditLogs   AuditLog[]
}

model Player {
  id        String  @id @default(cuid())
  event     Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  name      String
  handle    String?
  createdAt DateTime @default(now())
  bids      Bid[]
  sales     Sale[]
  ledger    LedgerEntry[]

  @@index([eventId])
}

model Team {
  id         String      @id @default(cuid())
  event      Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId    String
  name       String
  seed       Int?
  region     String?
  bracket    String?
  odds       Json?
  createdAt  DateTime    @default(now())
  lot        Lot?
  result     TeamResult?

  @@index([eventId])
}

model RuleSet {
  id                         String  @id @default(cuid())
  event                      Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId                    String  @unique
  anteCents                  Int
  minIncrementCents          Int
  auctionTimerSeconds        Int
  antiSnipeExtensionSeconds  Int
  roundAllocations           Json    // e.g., { \"wildcard\": 0.04, \"divisional\": 0.06, ... } sums to 1.0
  payoutBasis                PayoutBasis @default(team_price)
  includeAnteInPot           Boolean @default(true)
  additiveCombos             Boolean @default(true)
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime @updatedAt
}

model Lot {
  id            String    @id @default(cuid())
  event         Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId       String
  team          Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId        String    @unique
  orderIndex    Int
  status        LotStatus @default(pending)
  openedAt      DateTime?
  closesAt      DateTime?
  currentBidCents Int      @default(0)
  highBidderId  String? // playerId
  acceptedBidderId String? // playerId - set when host accepts a bid, required before selling
  bids          Bid[]
  sale          Sale?

  @@unique([eventId, orderIndex])
  @@index([eventId])
}

model Bid {
  id          String   @id @default(cuid())
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId     String
  lot         Lot      @relation(fields: [lotId], references: [id], onDelete: Cascade)
  lotId       String
  player      Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId    String
  amountCents Int
  createdAt   DateTime @default(now())

  @@index([eventId])
  @@index([lotId])
  @@index([playerId])
}

model Sale {
  id          String   @id @default(cuid())
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId     String
  lot         Lot      @relation(fields: [lotId], references: [id], onDelete: Cascade)
  lotId       String   @unique
  player      Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  playerId    String
  amountCents Int
  finalizedAt DateTime @default(now())
}

model TeamResult {
  id           String   @id @default(cuid())
  event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId      String
  team         Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId       String   @unique
  roundResults Json     // e.g., { \"wildcard\": \"W\", \"divisional\": \"L\" } (W/L/BYE/OUT)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([eventId])
}

model LedgerEntry {
  id          String     @id @default(cuid())
  event       Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId     String
  player      Player?    @relation(fields: [playerId], references: [id], onDelete: SetNull)
  playerId    String?
  type        LedgerType
  amountCents Int
  note        String?
  refId       String?
  createdAt   DateTime   @default(now())

  @@index([eventId])
  @@index([playerId])
  @@index([type])
}

model Snapshot {
  id        String   @id @default(cuid())
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  createdAt DateTime @default(now())
  data      Json
}

model AuditLog {
  id        String   @id @default(cuid())
  event     Event?   @relation(fields: [eventId], references: [id], onDelete: SetNull)
  eventId   String?
  actor     String?
  type      String
  details   Json?
  createdAt DateTime @default(now())
}
